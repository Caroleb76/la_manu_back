model User {
    id         String    @id @default(uuid())
    email      String
    password   String
    birthDate  DateTime? // Note: Prisma does not have DATEONLY, only full DateTime
    birthName  String?
    birthPlace String?
    permisB    Boolean
    mutuelle   Boolean
    employer   String?
    occupation String?
    FirstName  String?
    lastName   String?
    phone      String?
    gender     Boolean
    diploma    String?

    // Relations
    roleId   String
    adressId String?

    Role   Role   @relation(fields: [roleId], references: [id])
    Adress Address? @relation(fields: [adressId], references: [id])

    files File[]

    contracts Contract[]

    @@map("Users") 
    

}
