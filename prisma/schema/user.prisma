model User {
    id         String      @id @default(uuid())
    email      String      @unique
    password   String
    birthDate  DateTime? // Note: Prisma does not have DATEONLY, only full DateTime
    birthName  String?
    birthPlace String?
    permisB    Boolean?
    mutuelle   Boolean?
    employer   String?
    occupation String?
    firstName  String?
    lastName   String?
    phone      String?
    gender     GenderEnum?
    diploma    String?
    blocked    Boolean     @default(false)

    // Relations
    roleId    String
    addressId String?

    role    Role     @relation(fields: [roleId], references: [id])
    address Address? @relation(fields: [addressId], references: [id])

    files File[]

    contracts Contract[]

    @@map("Users")
}

enum GenderEnum {
    monsieur
    madame
    homme
    femme
}
